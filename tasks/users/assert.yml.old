- block:
  - name: assert > system uid between 100 to 499
    assert:
      that:
        - item.uid >= 100
        - item.uid <= 499
    when:
      - item.uid    is defined
      - item.system is defined
      - item.system is true
    loop: "{{ user }}"

  - name: assert > non system uid between 1000 to 60000
    assert:
      that:
        - item.uid >= 1000
        - item.uid <= 60000
    when:
      - item.uid is defined
      - (item.system is not defined) or (not item.system)
    loop: "{{ user }}"

  tags: users_assert
